{% extends 'base.html.twig' %}

{% block body %}

    <div id="visuel">

        <div class="col-12 d-flex justify-content-center my-5">

            <h1><strong>Contact</strong></h1>

        </div>

        {#######################################################################################
            ~~~~~~~~~~~~~~~~~~~~~~~~~    FORMULAIRE DE CONTACT    ~~~~~~~~~~~~~~~~~~~~~~~~~                                
        ########################################################################################}

        {{ form_start(form) }}

            <div class="row my-5">

                <div class="form-group col-6">

                    {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}

                </div>

                <div class="form-group col-6">

                    {{ form_row(form.prenom, {'attr': {'class': 'form-control'}}) }}

                </div>

            </div>

            <div class="row my-5">

                <div class="form-group col-6">

                    {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}

                </div>

                <div class="form-group col-6">

                    {{ form_row(form.telephone, {'attr': {'class': 'form-control'}}) }}

                </div>

            </div>

            <div class="form-group">

                {{ form_label(form.message) }}
                {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
                
            </div>

            <button type="submit" class="btn btn-light btn-md zoom my-3">Envoyer</button>

        {{ form_end(form) }}
        

        <div class="d-flex justify-content-around">

            <a href="{{ path('app_plat') }}" class="btn btn-light btn-lg zoom col-5 col-md-1 btns">Précédent</a>

        </div>

    </div>

{% endblock %}

