{% extends "base.html.twig" %}

{% block body %}

    <div id="visuel">

        <div class="col-12 d-flex justify-content-center my-5">

            <h2><strong>Les categories proposées</strong></h2>

        </div>
        
        <div class="d-flex justify-content-center">
            
            {#######################################################################################
                ~~~~~~~~~~~~~~~~~    AFFICHAGE CATEGORIES SUR ACCEUIL    ~~~~~~~~~~~~~~~~~~~~~~~                                 
            ########################################################################################}

            <div class="row col-12 col-md-9 d-flex justify-content-center mx-auto">
            
                {% for categorie in categorie %}

                    <div class="card custom-border bg zoom ck col-12 col-md-3 bg my-4 mx-5"><a type="submit" href="{{ path ('app_plats',{'categorie_id': categorie . id} ) }}">

                        <img class="card-img-top border-1 mt-3 img-fluid" src="{{ asset('food/' ~ categorie . image) }}" alt="{{ categorie . libelle }}">

                        <div class="card-body text-center">

                            <h2 class="card-title">{{ categorie . libelle }}</h2>
                            <span class="alert text-danger" data-id="{{ categorie . id }}">Disponible</span>
                            <span data-id="{{ categorie . id }}" class="alert gg"></span>
                            
                        </div>

                    </a></div>
                    
                {% endfor %}
                    
            </div>

        </div>

        <div class="col-12 d-flex justify-content-center my-5">

            <h1><strong>Best-sellers gustatives</strong></h1>

        </div>

        {############################################################################################
            ~~~~~~~~~~~~~~~~~~~~   AFFICHAGE DES BEST-SELLERS SUR INDEX    ~~~~~~~~~~~~~~~~~~~~~    
        #############################################################################################}
        
        <div class="row col-12 d-flex justify-content-center mx-auto">

            {% for element in plats %}
            
                <div class="card custom-border bg zoom col-12 col-md-2 mb-2 my-2 mx-auto">

                    <img src="{{ asset('food/' ~ element . image) }}" class="card-img-top border-1 mt-3 img-fluid" alt="{{ element . libelle }}">

                    <div class="card-body text-center">

                        <h3 class="card-title">{{ element . libelle }}</h3>

                        <p class="card-text">{{ element . description }}<br>
                        Menu: {{ element . prix }} €</p>     

                        <a href="{{ path ('ajouter', {'id': element . id })}}" class="btn btn-light d-flex justify-content-center idd">Ajouter au  panier</a>

                    </div>
                    
                </div> 
            
            {% endfor %}

            <div class="d-flex justify-content-center mt-4"> 

                <a href="{{ path('app_categorie') }}" class="btn btn-light btn-lg zoom col-5 col-md-1 btns">Suivant</a>
                
            </div>
            
        </div>
        
    </div>
    
{% endblock %}