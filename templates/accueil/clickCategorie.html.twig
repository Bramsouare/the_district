{% extends 'base.html.twig' %}

{% block body %}

    <div id="visuel">

        <div class="col-12 d-flex justify-content-center my-5">

            <h1><strong>Sélection de plats</strong></h1>

        </div>

        <div class="d-flex justify-content-center">
            
            {#######################################################################################
                ~~~~~~~~~~~~~~~~~~~~~~~    AFFICHAGE DES PLATS SALÉS    ~~~~~~~~~~~~~~~~~~~~~~~                                 
            ########################################################################################}

            <div class="row col-12 d-flex justify-content-center mx-auto">

                {% if plat is defined or plat is not empty %}

                    {% for element in plat %}

                        <div class="card custom-border bg zoom col-12 col-md-2 mb-3 my-3 mx-4 d-flex justify-content-center">

                            <img src="{{ asset('food/' ~ element . image) }}" class="card-img-top border-1 mt-3 img-fluid" alt="{{ element . libelle }}">

                            <div class="card-body text-center">

                                <h3 class="card-title">{{ element . libelle }}</h3>

                                <p class="card-text">{{ element . description }}<br>
                                Menu: {{ element . prix }} €</p>

                                <a href="{{ path ('ajouter', {'id': element . id })}}" class="btn btn-light d-flex justify-content-center idd">Ajouter au  panier</a>

                            </div>
                            
                        </div>

                    {% endfor %}

                    {% else %}

                    Victime de sont succès

                {% endif %}

            </div>

        </div>   

    </div>

{% endblock %}
