{% extends 'base.html.twig' %}

{% block body %}

    <div id="visuel">

        <div class="col-12 d-flex justify-content-center my-5">

            <h1><strong>Les categories</strong></h1>

        </div>

        <div class="d-flex justify-content-center">
            <!-- AFFICHAGE CATEGORIES -->
            <div class="row col-9">

                {% for categorie in categorie %}       
                    
                    <div class="card custom-border bg zoom ck col-12 col-md-3 bg my-4 mx-5" >

                        <img class="card-img-top border-1 mt-3 img-fluid" src="{{ asset('food/' ~ categorie . image) }}" alt="{{ categorie . libelle }}">

                        <div class="card-body text-center">

                            <h2 class="card-title">{{ categorie . libelle }}</h2>
                            
                            <span class="alert text-danger" data-id="{{ categorie . id }}">Disponible</span>
                            <span data-id="{{ categorie . id }}" class="alert gg"></span>

                        </div>

                    </div>

                {% endfor %}

            </div>

        </div>

        <div class="d-flex justify-content-around row mt-3"> <!--bouton-->    

            <a type="submit" href="{{ path('app_accueil') }}" class="btn btn-light btn-lg zoom col-5 col-md-1 btns">Précédent</a>
            <a type="submit" href="{{ path('app_plat') }}" class="btn btn-light btn-lg zoom col-5 col-md-1 btns">Suivant</a>

        </div>

    </div>

{% endblock %}
